<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/timeStart"
        style="@style/SubjectProperties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/baseline_access_time_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="9:30" />

    <TextView
        android:id="@+id/name"
        style="@style/SubjectProperties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/timeStart"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Thực hành Game" />

    <TextView
        android:id="@+id/location"
        style="@style/SubjectProperties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/baseline_location_on_24"
        app:layout_constraintStart_toEndOf="@+id/timeStart"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:text="901A1" />

    <TextView
        android:id="@+id/teacher"
        style="@style/SubjectProperties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/baseline_person_24"
        app:layout_constraintStart_toEndOf="@+id/timeStart"
        app:layout_constraintTop_toBottomOf="@id/location"
        tools:text="Teacher A" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/teacher"
        app:layout_constraintStart_toEndOf="@id/timeStart"/>
</androidx.constraintlayout.widget.ConstraintLayout>